    <div class="box-root padding-top--24 flex-flex flex-direction--column" style="flex-grow: 1; z-index: 9;">
        <div class="box-root padding-top--48 padding-bottom--24 flex-flex flex-justifyContent--center">
            <h1><a href="/matches" rel="dofollow">Agregar Partido</a></h1>
        </div>
        <div class="formbg-outer">
            <div class="formbg">
                <div class="formbg-inner padding-horizontal--48">
                    <form action="/matches/match" method="POST" id="stripe-login">
                        <div class="field padding-bottom--24">
                            <p>Nombre del Equipo 1</p>
                            <input type="text" name="team_name1" class="form-control" placeholder="Nombre del equipo 1">
                        </div>

                        <div class="field padding-bottom--24">
                            <p>Nombre del Equipo 2</p>
                            <input type="text" name="team_name2" class="form-control" placeholder="Nombre del Equipo 2">
                        </div>

                        <div class="field padding-bottom--24">
                            <p>Tipo de campeonato</p>
                            <input type="text" name="type_championship" class="form-control"
                                placeholder="Tipo de campeonato">
                        </div>

                        <div class="field padding-bottom--24">
                            <p>Nombre del Arbitro</p>
                            <input type="text" name="referee_name" class="form-control"
                                placeholder="Nombre del Arbitro">

                        </div>

                        <div class="field padding-bottom--24">
                            <p>Tiempo inicial</p>
                            <input type="time" class="form-control" name="start_time" placeholder="inicio tiempo">

                        </div>

                        <div class="field padding-bottom--24">
                            <p>Tiempo Final</p>
                            <input type="time" class="form-control" name="end_time" placeholder="end_time">

                        </div>

                        <div class="field padding-bottom--24">
                            <p>Lugar</p>
                            <input type="text" name="place" class="form-control" placeholder="Lugar ">

                        </div>

                        <div class="field padding-bottom--24">
                            <p>Fecha</p>
                            <input type="date" class="form-control" name="date" placeholder="Fecha">

                        </div>

                        <div class="field padding-bottom--24">
                            <input type="submit" name="submit" value="Guardar">
                        </div>
                    </form>
                </div>
            </div>
            <br><br>

        </div>
    </div>
</div>