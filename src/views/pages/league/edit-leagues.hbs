<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card ">
            <div class="card-body">
                <form action="/leagues/edit-leagues/{{league.id}}" method="POST">
                    <div class="form-group">
                        <h5 class="mt-3">Presidente de la liga barrial</h5>
                        <input type="text" value="{{league.boss}}" class="form-control" name="boss"
                            placeholder="presidente de la liga" autofocus>
                    </div>
                    <br>
                    <div class="form-grou">
                        <h5 class="mt-3">Categoria</h5>
                        <input type="text" value="{{league.category}}" name="category" class="form-control"
                            placeholder="Categoria ">
                    </div>
                    <div class="form-grou">
                        <br>
                        <h5 class="mt-3">Numeros de Equipos</h5>
                        <input type="text" value="{{league.number_teams}}" name="number_teams" class="form-control"
                            placeholder="Numeros de Equipos ">
                    </div>
                    <br>
                    <div class="form-grou">
                        <br>
                        <h5 class="mt-3">Ciudad</h5>
                        <input type="text" value="{{league.city}}" name="city" class="form-control"
                            placeholder="Ciudad ">
                    </div>

                    <div class="form-group mt-3 d-grid">
                        <button type="submit" class="btn btn-success btn-block"> Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>