<div class="container">

    {{#each leagues}}

    <div class="card">
        <div class="box">
            <div class="content"> 
                <p>Nombre del presidente: {{boss}}</p>
                <p>Categoria: {{category}}</p>
                <p>Numeros de Equipos: {{number_teams }}</p>
                <p>Ciudad {{city}}</p>
                <a href="/leagues/delete-leagues/{{id}}" style="background-color: red ; color:aliceblue;"
                    class="btn btn-danger">Eliminar</a>
                <a href="/leagues/edit-leagues/{{id}}" style="background-color: rgb(12, 174, 0) ; color:aliceblue;" class="btn btn-secondary">Editar</a>


            </div>
        </div>
    </div>
    {{else}}
    <div class="card">
        <div class="box">
            <div class="content">

                <p>No hay registro guardados aun </p>
                <a href="/leagues"> Agrega uno haciendo click aqui </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>