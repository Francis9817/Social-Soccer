<div class="container p-4">
    <div class="row">
        {{#each stadiums}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card text-uppercase">
                        {{name}}
                    </h3>
                    <p class="m-2">{{price}}</p>
                    <p class="m-2">{{ability}}</p>
                    <p class="m-2">{{location}}</p>
                    <a href="/stadiums/delete-stadiums/{{id}}" class="btn btn-danger">Eliminar</a>
                    <a href="/pages/edit-stadium/{{id}}" class="btn btn-secondary">Editar</a>

                </div>
            </div>
        </div>
        {{else}}
        <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p>No hay registro guardados a un </p>
                <a href="/stadiums"> Agrega uno haciendo click aqui</a>
            </div>
        </div>
        {{/each}}

       
    </div>
</div>