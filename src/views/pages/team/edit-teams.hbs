<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card ">
            <div class="card-body">
                <form action="/teams/edit-teams/:{{team.id}}" method="POST">
                    <div class="form-group">
                        <h5 class="mt-3">Nombre del Equipo</h5>
                        <input type="text" value="{{team.squad}}" class="form-control" name="squad"
                            placeholder="Nombre del Equipo" autofocus>
                    </div>
                    <br>
                    <div class="form-grou">
                        <h5 class="mt-3">Nombre del Dueño</h5>
                        <input type="text" value="{{team.boss}}" name="boss" class="form-control"
                            placeholder="Nombre del dueño del equipo ">
                    </div>
                    <div class="form-grou">
                        <br>
                        <h5 class="mt-3">Categoria</h5>
                        <input type="text" value="{{team.category}}" name="category" class="form-control"
                            placeholder="Nombre del entrenador del equipo ">
                    </div>
                    <br>
                    <h5 class="mt-3">Fecha de fundacion</h5>
                    <input type="date" value="{{team.foundation}}" name="foundation" class="form-control"
                        placeholder="Fecha de fundacion ">

                    <div class="form-group mt-3 d-grid">
                        <button type="submit" class="btn btn-success btn-block"> Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>