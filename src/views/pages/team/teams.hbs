<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card ">
            <div class="card-body">
                <form action="/teams/team" method="POST">
                    <div class="form-group">
                        <label for="nombre">Nombre del Equipo:</label>
                        <input type="text" class="form-control" name="squad" placeholder="nombre del equipo" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="equipo">Nombre del dueño:</label>
                        <input type="text" class="form-control" name="boss" placeholder="Nombre del dueño del equipo" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="equipo">Categoria:</label>
                        <input type="text" class="form-control" name="category" placeholder="categoria" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="edad">Fecha de fundacion:</label>
                        <input type="date" class="form-control" name="foundation" placeholder="fecha de fundacion" autofocus>
                    </div>
                    <div class="form-group mt-3 d-grid">
                        <button type="submit" class="btn btn-success btn-block"> Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
